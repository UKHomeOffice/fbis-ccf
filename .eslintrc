extends:
  - "homeoffice/config/default"

rules:
  consistent-return: off

env:
  es6: true
  node: true
  mocha: true

parserOptions:
  ecmaVersion: 8

overrides:
  - files:
      "test/**/*.js"
    rules:
      implicit-dependencies/no-implicit: [error, { dev: true }]
    globals:
      chai: true
      sinon: true
      expect: true
      browser: true
      page: true
      baseURL: true
      getSubmit: true
      submitPage: true
      getErrorSummaries: true
      getErrorMessages: true
  - files:
      "assets/js/*.js"
    env:
      browser: true
